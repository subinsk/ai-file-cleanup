# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# API Configuration
API_PORT=3001
API_HOST=localhost
NODE_ENV=development

# Model Worker Configuration
MODEL_WORKER_URL=http://localhost:3002
MODEL_CACHE_DIR=./cache/models

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Processing Limits
MAX_FILE_SIZE_MB=10
MAX_TOTAL_UPLOAD_SIZE_MB=100
MAX_FILES_PER_UPLOAD=100

# Similarity Thresholds
EXACT_MATCH_THRESHOLD=0.98
HIGH_SIMILARITY_THRESHOLD=0.90
MEDIUM_SIMILARITY_THRESHOLD=0.85

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Web App (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_ENV=development

# Desktop App
DESKTOP_API_URL=http://localhost:3001

