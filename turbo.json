{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "out/**", "build/**"],
      "env": ["NEXT_PUBLIC_*", "VITE_*"]
    },
    "build:electron": {
      "outputs": ["dist/electron/**"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:electron"]
    },
    "dev:renderer": {
      "cache": false,
      "persistent": true
    },
    "dev:electron": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build:electron"]
    },
    "watch:electron": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "outputs": ["node_modules/@prisma/client/**", "prisma/generated/**"]
    },
    "db:push": {
      "cache": false
    }
  }
}
