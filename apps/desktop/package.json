{
  "name": "@ai-cleanup/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "AI File Cleanup - Desktop Application",
  "author": {
    "name": "AI File Cleanup Team",
    "email": "support@aifilecleanup.com"
  },
  "main": "dist/electron/main.js",
  "scripts": {
    "prebuild": "pnpm --filter @ai-cleanup/types build && pnpm --filter @ai-cleanup/core build && pnpm --filter @ai-cleanup/ui build",
    "dev": "pnpm build && concurrently \"npm run dev:renderer\" \"npm run watch:electron\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on dist/electron/main.js && nodemon --watch dist/electron --exec electron . --trace-warnings",
    "build": "npm run prebuild && npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "webpack --config webpack.config.js",
    "watch:electron": "webpack --config webpack.config.js --watch",
    "package": "npm run build:prod && electron-builder",
    "package:win": "npm run build:prod && electron-builder --win",
    "package:mac": "npm run build:prod && electron-builder --mac",
    "package:linux": "npm run build:prod && electron-builder --linux",
    "build:prod": "npm run prebuild && npm run build:renderer:prod && npm run build:electron:prod",
    "build:renderer:prod": "vite build --mode production",
    "build:electron:prod": "cross-env NODE_ENV=production webpack --config webpack.config.js"
  },
  "dependencies": {
    "@ai-cleanup/core": "workspace:*",
    "@ai-cleanup/types": "workspace:*",
    "@ai-cleanup/ui": "workspace:*",
    "dotenv": "^17.2.3",
    "fast-glob": "^3.3.2",
    "glob-parent": "^6.0.2",
    "trash": "^8.1.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-playwright-helpers": "^1.8.2",
    "electron-reload": "^2.0.0-alpha.1",
    "lucide-react": "^0.263.1",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.1",
    "wait-on": "^9.0.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.aicleanup.desktop",
    "productName": "AI File Cleanup",
    "directories": {
      "output": "dist-package"
    },
    "files": [
      "dist/**/*",
      "!dist/electron/main.js.map",
      "!dist/electron/preload.js.map",
      "package.json",
      ".env"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}.${ext}",
      "publisherName": "AI File Cleanup Team",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI File Cleanup",
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "license": "LICENSE.txt",
      "warningsAsErrors": false,
      "include": "installer.nsh"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI File Cleanup",
      "runAfterFinish": true,
      "upgradeCode": "a3e4f5c6-1234-5678-90ab-cdef12345678"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icon.png"
    }
  }
}
